<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_package_card"
        android:layout_margin="@dimen/spacing_"
        app:cardCornerRadius="@dimen/spacing_5"
        app:cardElevation="@dimen/spacing_15">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spark"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/size_20"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"

                        />
                </LinearLayout>

                <!--  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Spark"
                      android:textColor="@color/black_color"
                      android:textSize="@dimen/size_20"
                      android:gravity="center_horizontal"
                      android:layout_marginTop="@dimen/spacing_16"
                      />-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:layout_marginStart="@dimen/spacing_12">
                    <TextView
                        android:id="@+id/tv_From"
                        android:layout_width="@dimen/width_textView_package_detail"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:layout_weight="1"
                        android:textColor="@color/black_color"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Gandhi Nagar Ghaziabad"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_toEndOf="@+id/tv_From"
                        android:layout_marginStart="@dimen/spacing_16"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:layout_marginStart="@dimen/spacing_12">
                    <TextView
                        android:id="@+id/tv_To"
                        android:layout_width="@dimen/width_textView_package_detail"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textStyle="bold"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:id="@+id/tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Gandhi Nagar Ghaziabad"
                        android:gravity="center_horizontal"
                        android:layout_toEndOf="@+id/tv_To"
                        android:layout_marginStart="@dimen/spacing_16"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:layout_marginStart="@dimen/spacing_12">
                    <TextView
                        android:id="@+id/tv_Distance"
                        android:layout_width="@dimen/width_textView_package_detail"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textColor="@color/black_color"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/under_20km"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_toEndOf="@+id/tv_Distance"
                        android:layout_marginStart="@dimen/spacing_16"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_Fare"
                        android:layout_width="@dimen/width_textView_package_detail"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="Fare"
                        android:textColor="@color/black_color"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_12000"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_toEndOf="@+id/tv_Fare"
                        android:layout_marginStart="16dp"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_select_sub_days"
                        android:layout_width="@dimen/width_textView_package_detail"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="Days"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_color"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="189dp"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@+id/tv_select_sub_days"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                         />
                </RelativeLayout>

                <Button
                    android:id="@+id/tv_buy_select_package"
                    android:layout_width="@dimen/width_btn_buy"
                    android:layout_height="@dimen/height_btn_buy"
                    android:text="@string/buy_now"
                    android:layout_gravity="end"
                    android:textColor="@color/white_color"
                    android:background="@drawable/background_button_buy"
                    android:layout_marginEnd="@dimen/spacing_27"
                    android:layout_marginTop="@dimen/spacing_16"/>
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
